{{> page/nav}}

<div class="col-xs-12 col-md-6 col-md-offset-3">
    <div class="text-center">
        <h1>Writing reviews!</h1>
        <h4>You will get a rating on your review to see how much you liked the movie</h4>
    </div>
    <form role="form" action="/review" method="post">
        <div class="form-group">
            <input title="movie" type="text" class="form-control" name="movie" placeholder="Movie"/>
            <br/>
            <input title="title" type="text" class="form-control" name="title" placeholder="Title of review"/>
            <br/>
            <textarea title="review" class="form-control" name="review" placeholder="Review"></textarea>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>