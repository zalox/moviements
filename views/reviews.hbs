{{> page/nav}}

<div class="col-xs-12 col-md-6 col-md-offset-3">
    <div class="text-center">
        <h1>Reviews</h1>
    </div>
    <table class="table table-hover">
        <tr>
            <td>#</td>
            <td>Movie</td>
            <td>Title</td>
            <td>Score</td>
            <td>Date</td>
        </tr>
        {{#each reviews}}
        <tr>
            <td>{{@index}}</td>
            <td>{{movie}}</td>
            <td>{{title}}</td>
            {{#if score}}
            <td>{{score}}</td>
            {{else}}
            <td>-</td>
            {{/if}}
            <td>{{date}}</td>
        </tr>
        {{/each}}
    </table>
</div>